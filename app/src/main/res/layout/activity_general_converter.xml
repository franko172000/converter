<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.franklin.converter.GeneralConverter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="Crypto Currency and General Currency Converter"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="Tap on country name to change currency"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:text="From"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />
            <LinearLayout
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/from_flag"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/bitcoin"/>
                <TextView
                    android:id="@+id/from_name"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin BTC"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:padding="16dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:text="To"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />
            <LinearLayout
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/to_flag"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/nigerian_naira"/>
                <TextView
                    android:id="@+id/to_name"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Nigerian Naira NGN"/>
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="18sp"
            android:inputType="number"
            android:background="@drawable/text_bg"
            android:hint="Please enter amount for conversion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:padding="5dp"
                    android:id="@+id/defaultText"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="1 USD = 356.5 NGN"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progress"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/result_converted"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="356.5 NGN"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
